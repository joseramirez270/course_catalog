<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
          <tr>
            <td><%= course.code %></td>
            <td><%= course.name %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>

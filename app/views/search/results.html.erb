<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% if @courses.present? %>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.name %> <%= course.description %> Enroll</td>
          </tr>
        <% end %>
      <% else %>
        <p>No courses found</p>
      <% end %>
  </tbody>
</table>
